@model VoucherProject.Models.VoucherViewModel

@{
    ViewBag.Title = "Create Voucher";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-xxl">
    <div class="authentication-wrapper authentication-basic container-p-y">
        <div class="authentication-inner">
            <div class="card px-sm-6 px-0">
                <div class="card-body">
                    <!-- Logo -->
                    <div class="app-brand justify-content-center mb-6">
                        <a href="index.html" class="app-brand-link gap-2">
                            <span class="app-brand-logo demo">
                                <img src="https://synergyinterface.com/assets/images/logo.png" alt="Logo" width="100">
                            </span>
                        </a>
                    </div>
                    <!-- /Logo -->
                    <h4 class="mb-1">Create Voucher</h4>
                    <form method="post" action="@Url.Action("CreateVoucher", "Auth")" id="formAuthentication" class="mb-6">
                        <div class="mb-6">
                            <label for="ParticularDate">Particular Date</label>
                            <input type="date" id="ParticularDate" name="ParticularDate" class="form-control" value="@Model.ParticularDate?.ToString(" yyyy-MM-dd")" />
                        </div>
                        <div class="mb-6">
                            <label for="Particular">Particular</label>
                            <input type="text" id="Particular" name="Particular" class="form-control" value="@Model.Particular" />
                        </div>
                        <div class="mb-6">
                            <label for="Remarks">Remarks</label>
                            <input type="text" id="Remarks" name="Remarks" class="form-control" value="@Model.Remarks" />
                        </div>
                        <div class="mb-6">
                            <label for="Amount">Amount</label>
                            <input type="number" id="Amount" name="Amount" class="form-control" value="@Model.Amount" />
                        </div>
                        <div class="mb-6">
                            <label for="SubmitDate">Submit Date</label>
                            <input type="date" id="SubmitDate" name="SubmitDate" class="form-control" value="@Model.SubmitDate?.ToString(" yyyy-MM-dd")" />
                        </div>

                        <button type="submit" class="btn btn-primary d-grid">Submit Voucher</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Toast Notification -->
<div id="toast" class="toast" style="position: fixed; bottom: 20px; right: 20px; display: none;">
    <div class="toast-body bg-success text-white">
        Voucher added successfully!
    </div>
</div>

@* Bootstrap JS and Toast functionality *@
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
    // Show toast on successful form submission
    @if (TempData["SuccessMessage"] != null)
    {
        <text>
            $(document).ready(function() {
                $('#toast').fadeIn().delay(3000).fadeOut();
            });
        </text>
    }
</script>
