@model VoucherProject.Models.VoucherViewModel

@{
    ViewBag.Title = "Edit Voucher";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-xxl">
    <div class="authentication-wrapper authentication-basic container-p-y">
        <div class="authentication-inner">
            <div class="card px-sm-6 px-0">
                <div class="card-body">

                    <!-- Logo -->
                    <div class="app-brand justify-content-center mb-6">
                        <a href="index.html" class="app-brand-link gap-2">
                            <span class="app-brand-logo demo">
                                <img src="https://synergyinterface.com/assets/images/logo.png" alt="Logo" width="100">
                            </span>
                        </a>
                    </div>

                    <h4 class="mb-1"> Edit Voucher </h4>
                    <form method="post" action="@Url.Action("EditVoucher", "Auth")" id="formAuthentication" class="mb-6">
                        <input type="hidden" name="Id" value="@Model.Id" />
                        <input type="hidden" name="UserId" value="@Model.UserId" />
                        <div class="mb-6">
                            <label for="ParticularDate">Particular Date</label>
                            <input type="date" id="ParticularDate" name="ParticularDate" class="form-control" value="@Model.ParticularDate.ToString("yyyy-MM-dd")" />
                        </div>
                        <div class="mb-6">
                            <div class="form-group">
                                <label for="Particular">Particular</label>
                                <input type="text" id="Particular" name="Particular" class="form-control" value="@Model.Particular" />
                            </div>
                        </div>
                        <div class="mb-6">
                            <div class="form-group">
                                <label for="Remarks">Remarks</label>
                                <input type="text" id="Remarks" name="Remarks" class="form-control" value="@Model.Remarks" />
                            </div>
                        </div>
                        <div class="mb-6">
                            <div class="form-group">
                                <label for="Amount">Amount</label>
                                <input type="number" id="Amount" name="Amount" class="form-control" value="@Model.Amount" />
                            </div>
                        </div>
                        <br />
                        <button type="submit" class="btn btn-primary">Update Voucher</button>
                        <a href="@Url.Action("VoucherList", "Auth")" class="btn btn-secondary">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Toast Notification -->
<div id="toast" class="toast-container position-fixed top-0 end-0 p-3">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="toast align-items-center text-white bg-success border-0" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body">
                    @TempData["SuccessMessage"]
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="toast align-items-center text-white bg-danger border-0" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body">
                    @TempData["ErrorMessage"]
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    }
</div>

<!-- Scripts -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<script>
    $(document).ready(function () {
        // Show toast notification if there's a success or error message
        if (@(TempData["SuccessMessage"] != null ? "true" : "false") === "true" || @(TempData["ErrorMessage"] != null ? "true" : "false") === "true") {
            var toast = new bootstrap.Toast(document.getElementById('toast'));
            toast.show();
        }
    });
</script>
